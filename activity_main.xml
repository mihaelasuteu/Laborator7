<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/miha"
    tools:context=".MainActivity">



    <Button

        android:layout_width="406dp"
        android:layout_height="55dp"
        android:id="@+id/asculta"
        android:text="Listen it!"
        android:background="#7a1f5c"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textview"
        android:background="#cc0099"
        android:text="lab7 is awesome because it is our last lab"

        android:textColorHint="@color/colorPrimaryDark"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" /> <!-- locul in care apare textul  -->

    <Button
        android:id="@+id/scrie"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-1dp"

        android:layout_width="406dp"
        android:layout_height="55dp"

        android:text="Tap to open mic  "
        android:background="#7a1f5c"

         />

</androidx.constraintlayout.widget.ConstraintLayout>